		<constructor-arg value="696132996010-3koghf38vkb6s0fiqcjj2156p4e4l79e.apps.googleusercontent.com" />
		<constructor-arg value="P1WZfaslywHmrollf27nt2kt" />
	</bean>
	<!-- 승인된 자바스크립트 원본과 승인된 리디렉션 URI -->
