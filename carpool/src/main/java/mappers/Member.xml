<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kitri.sns.calender.CalenderDao">

	<resultMap id="calenderResult" type="com.kitri.sns.calender.Calender">
		<result column="num" property="num" />
		<result column="writer" property="writer" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="w_date" property="w_date" />
		<result column="path1" property="path1" />
		<result column="path2" property="path2" />
		<result column="path3" property="path3" />
		<result column="path4" property="path4" />
		<result column="limit" property="limit" />
		<result column="liked" property="liked" />
		<result column="cate" property="cate" />
	</resultMap>
	
	<insert id="insert" parameterType="com.kitri.sns.calender.Calender">
		insert into sns_calender values(sns_calender_no.nextval, #{writer}, #{title}, #{content}, sysdate, #{path1}, #{path2}, #{path3}, #{path4}, #{limit}, #{liked}, #{cate})
	</insert>
	<update id="update" parameterType="com.kitri.sns.calender.Calender">
		update sns_calender set title=#{title}, content=#{content}, w_date=#{w_date}, path1=#{path1}, path2=#{path2}, path3=#{path3}, path4=#{path4}, limit=#{limit}, liked=#{liked}, cate=#{cate} where num=#{num}
	</update>
	<delete id="delete" parameterType="int">
		delete sns_calender where num=#{num}
	</delete>
	<select id="select" parameterType="int" resultMap="calenderResult">
		select * from sns_calender where num=#{num}
	</select>
	<select id="selectAll" resultMap="calenderResult">
		select * from sns_calender order by num
	</select>

</mapper>